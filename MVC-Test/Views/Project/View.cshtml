@{
    ViewBag.Title = "View Project Page";
}
@using Microsoft.AspNetCore.Authorization;
@using Microsoft.AspNetCore.Mvc;
@using Group6Application.Models
@model Group6Application.Models.Project

<script>

    ready(function () {
        $("#addDepartmentRedirect").click(function () {
            $('#submittingModal').modal({
                backdrop: 'static',
                keyboard: false
            })
            addDepartmentRedirect();
        });
    });

    function addDepartmentRedirect() {
        Response.Redirect(@Url.Action("AddProject", "Department"))
    }
</script>


<html>
<head>
    <link rel="stylesheet" href="~/css/bootstrap.css">
    <link rel="stylesheet" href="~/css/site.css">

    <script src="~/js/jquery-3.6.4.min.js"></script>
    <script src="~/js/bootstrap.min.js"></script>
</head>
<div class="text-center">
    <div class="row">
        <div class="col-4 text-start">
            <h4><strong>Project Statisitcs:</strong> </h4>
            <h4>ID @(Model.ID)</h4>
            <h4>Combined Hours: @(Model.TotalHours)</h4>
            <h4>Total Cost: @(Model.Cost)</h4>
            <h4>Client: @(Model.ClientID)</h4>
            <h4>Budget: @(Model.Budget)</h4>
            <h4>DepartmentID: @(Model.DepartmentID)</h4>
            <h4>SupervisorID: @(Model.SupervisorID)</h4>
            <h4>Project Status: @(Model.Status)</h4
            <h4>Project Description: @(Model.Description)</h4>
            <h4>Project Start Date: @(Model.StartDate)</h4>
            <h4>Project End Date: @(Model.EndDate)</h4>
        </div>
        <div class="col-8">
            <div class="row">
                <div class="col-md-12">
                    <h1><strong>@(Model.Name)</strong> Project </h1>
                </div>

                <div class="col-md-6">
                    <h3> Supervisor ID</h3>
                    <p>@Model.SupervisorID</p>
                </div>

                <div class="col-md-6">
                    <h3>Department ID</h3>
                    <p>@Model.DepartmentID</p>
                </div>
            </div>

            <div class="row">

                <div class="col-md-12">
                    <h2>Checkpoints</h2>
                </div>


                <table class="table">
                    <div class="col-md-12">
                    <tr>
                        <th>ID</th>
                        <th>Name</th>
                        <th>Status</th>
                        <th>Description</th>
                        <th>View Checkpoint</th>
                    </tr>

                        @foreach (CheckpointModel cp in Model.Checkpoints)
                        {
                        <tr>
                            <td>@cp.ID</td>
                            <td>@cp.Name</td>
                            <td>@cp.Status</td>
                            <td>@cp.Description</td>

                            <td><a href="/Checkpoint/View?id=@(cp.ID)">View @cp.Name</a></td>
                        </tr>

                        }

            </div>
            </table>
            <p></p>
            <div class="row">
                <div class="col-md-4">
                    <a href="/Department/Delete?id=@Model.ID"><button>Delete Project</button></a>
                </div>

                <div class="col-md-4">
                    <a href="/Department/Update?id=@Model.ID"><button>Update Project</button></a>
                </div>

                <div class="col-md-4">
                    <a class="text-center" href="/Task/AddTask?projID=@Model.ID"><button>Add Task</button></a>
                </div>

                <div class="col-md-4">
                    <a href="/Department"><button>Return</button></a>
                </div>
            </div>





        </div>

    </div>


</div>

</div>

</html>
