@model Group6Application.Models.Project
@{

}
@using MVC_Test.Controllers
@using Group6Application.Models;
@using System.Data;
@using Microsoft.AspNetCore.Authorization;
@using Microsoft.AspNetCore.Mvc;
@using Group6Application;
<html>
<head>
    <link rel="stylesheet" href="~/css/bootstrap.css">
    <link rel="stylesheet" href="~/css/site.css">

    <script src="~/js/jquery-3.6.4.min.js"></script>
    <script src="~/js/bootstrap.min.js"></script>

</head>
<div class="text-center">

    <div class="row text-start">
        <h1 class="text-center">Current Departments</h1>
        <table class="table">
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Start Date</th>
                <th>Due Date</th>
                <th>Status</th>
            </tr>

            @{
                foreach (CheckpointModel checkpoint in Model.Checkpoints)
                {
                    <tr>
                        <td>@checkpoint.ID</td>
                        <td><a href="/Checkpoint?checkpointID=@(checkpoint.ID)">@checkpoint.Name</a></td>
                        <td>@checkpoint.StartDate</td>
                        <td>@checkpoint.DueDate</td>
                        <td>@checkpoint.Status</td>
                    </tr>
                }
            }

        </table>
        <br />
    </div>

</div>

</html>