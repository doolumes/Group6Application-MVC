
@using Microsoft.AspNetCore.Authorization; 
@using Microsoft.AspNetCore.Mvc;
@using Group6Application.Models
@model DownloadTasksView

<div class="row">
    <div class="col-md-12">
        <h2>Unfinished Tasks</h2>
    </div>
    <div class="col-md-12">Total Unfinished Tasks: @Model.Tasks.Count</div>
    <div class="col-md-12">
        @if (Model.Tasks.Count == 0)
        {
            <p>No unfinished tasks found for this Department</p>
        }
        else
        {
            <table>
                <tr>
                    <th>Task ID</th>
                    <th>Name</th>
                    <th>Description</th>
                    <th>Assignee</th>
                    <th>Project</th>
                    <th>Start Date</th>
                    <th>Due Date</th>
                    
                </tr>



                @foreach (TaskModel task in Model.Tasks)
                {
                    <tr>
                        <td>@task.ID</td>
                        <td>@task.Name</td>
                        <td>@task.Description</td>
                        <td><a href="/?@task.Assignee"></a>@task.Assignee</td>
                        <td>-------</td>
                        <td>@task.Start</td>
                        <td>@task.Due</td>
                    </tr>
                }
            </table>
        }
    </div>
</div>
