
@using Microsoft.AspNetCore.Authorization; 
@using Microsoft.AspNetCore.Mvc;
@using Group6Application.Models
@model ReportsProjectsView

<div class="row">
    <div class="col-md-12">
        <h2>Hours Worked and Wages</h2>
    </div>
    <div class="col-md-12">Total Hours Worked: </div>
    <div class="col-md-12">
        @if (Model.costs.Count == 0 && Model.expenses.Count == 0)
        {
            <p>There are no associated costs for this project.</p>
        }
        else
        {
            <h2>Timesheet costs</h2>
            @if (Model.costs.Count == 0)
            {
                <p>This project has not been worked on.</p>
            }
            else
            {
                <div class="div-md-6">
                    <h4>Hours Worked</h4>
                    <p>@Model.totalHours</p>
                </div>
                <div class="div-md-6">
                    <h4>Total Cost</h4>
                    <p>@Model.totalWages</p>
                </div>
                
                <table>
                    <tr>
                        <th>Timesheet ID</th>
                        <th>Employee Name</th>
                        <th>Hours Worked</th>
                        <th>Hourly Wage</th>
                        <th>Associated Cost</th>
                    </tr>



                    @foreach (ProjectCosts cost in Model.costs)
                    {
                        <tr>
                            <td><a href="/Timesheet/View?id=@cost.timesheet.EntryID">@cost.timesheet.EntryID</a></td>
                            <td><a href="/Employee/View?id=@cost.employee.ID">@cost.employee.FirstName @cost.employee.LastName<a /></td>
                            <td>@cost.timesheet.HoursWorked</td>
                            <td>@cost.employee.Wage</td>
                            <td>@cost.cost</td>
                        </tr>
                    }
                </table>
            }

            <br />
            <br />
            <h2>Expenses</h2>
            @if (Model.expenses.Count == 0)
            {
                <p>There are no expenses associated with this project.</p>
            }
            else
            {
                <div class="div-md-6">
                    <h4>Total Expenses</h4>
                    <p>@Model.totalExpenses</p>
                </div>
                <table>
                    <tr>
                        <th>Expense ID</th>
                        <th>Name</th>
                        <th>Description</th>
                        <th>Cost</th>
                    </tr>

                    @foreach (Expense expense in Model.expenses)
                    {
                        <tr>
                            <td>@expense.ExpenseID</td>
                            <td>@expense.Name</td>
                            <td>@expense.Description</td>
                            <td>@expense.Cost</td>
                        </tr>
                    }
                </table>
            }

        }
    </div>
</div>
