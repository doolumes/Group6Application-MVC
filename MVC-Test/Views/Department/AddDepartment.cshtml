@{
    ViewBag.Title = "Add Department Page";
}
@using Microsoft.AspNetCore.Authorization; 
@using Microsoft.AspNetCore.Mvc;
@using Group6Application.Models
@model Group6Application.Models.DepartmentView
<head>
    <link rel="stylesheet" href="~/css/bootstrap.css">
    <link rel="stylesheet" href="~/css/site.css">

    <script src="~/js/jquery-3.6.4.min.js"></script>
    <script src="~/js/bootstrap.min.js"></script>

</head>

<script>

    $(document).ready(function() {
        $("#submit").click(function(){
            $('#submittingModal').modal('show');
            if (pageValid()){  
                submit();
            }
            else{
                $('#submittingModal').modal('hide');
            }
            
        });
    });

    function pageValid(){
        var pageValid = false;
        var invalidObjects = 0;
        var listOfInvalidObjects ="";
    
        // Do for each required input
        var inputID = "#name";
        if ( $(inputID).val().length == 0 ){
            invalidObjects++;
            $(inputID + "RequiredAlert").show();
        }
        else{
            $(inputID + "RequiredAlert").hide();
        }


        if (invalidObjects == 0){
            pageValid = true;
        }
        return pageValid;
    }

    function submit(){
        $.ajax({
            type: "POST",
            url: "@Url.Action("AddDepartmentDB")", // must match function name in controller
            data:{
                Name: $('#name').val(),
                SupervisorID: $('#supervisorID').val(),
            },
            dataType:"text",
            error: function(msg){
                $("#submittingModal").modal('hide');
                $(".modal-backdrop").remove();
                $("#errorModal").modal();
            },
            success: function(data){
                $("#submittingModal").modal('hide');
                var json = $.parseJSON(data);
                if (json.submissionResult){ // Submission is true
                    $("#confirmationModal").modal();
                }
                else {
                    $("#errorModal").modal();
                }
            }
        });
    }
</script>

<html>
    
    <div class="row text-center">
        <div class="col-md-12">
            <h1>Current Departments</h1>
        </div>

        <div class="col-md-12">

        </div>
   </div>
    <div class="row">
        <div class="col-md-8 offset-md-2 ">

            <form>
                <h3 class="">Department Information</h3>

                <label for="name">Department Name</label>
                <input type="text" id="name" name="name" required />
                <span id="nameRequiredAlert" class="collapse required">Required Field</span>
                <br />
                <label for="supervisorID">Select a supervisor for this department</label>
                <select id="supervisorID" name="supervisorID" required>
                    <option value="">Unassigned</option>
                    @{
                        foreach (SelectListItem id in Model.EmployeeIDs)
                        {
                            if (!String.IsNullOrEmpty(id.Text))
                            {
                                <option value="@id.Value">@id.Text</option>
                            }

                        }
                    }
                </select>

                <div class="col-md-3">
                    <p>
                        <button type="button" id="submit" name="submit" class="btn-block">Submit</button>
                    </p>
                </div>
            </form>
            <div class="col-md-3">
                <a href="/Department"><button class="btn-block">Return</button></a>
            </div>
        </div>
    </div>
  
<div id="submittingModal" class="modal" tabindex="-1">

    <div class="modal-dialog" role="document">
        <div class="modal-header">
            <h2>Submitting</h2>
        </div>
        <div class="modal-body">
            <p>Form is being submitted</p>
        </div>
    
    </div>

</div>

<div id="errorModal" class="modal" tabindex="-1">

    <div class="modal-dialog" role="document">
        <div class="modal-header">
            <h2>Error</h2>
        </div>
        <div class="modal-body">
            <p>An error has occurred while submitting.</p>
        </div>
        <button type="button" data-dismiss="modal" class="btn-block">Okay</button>
    </div>

</div>

<div id="confirmationModal" class="modal" tabindex="-1">

    <div class="modal-dialog" role="document">
        <div class="modal-header">
            <h2>Confirmation</h2>
        </div>
        <div class="modal-body">
            <p>The form has been sucessfully submitted</p>
        </div>
        <button type="button" data-dismiss="modal" class="btn-block">Okay</button>
    </div>

</div>

</html>
